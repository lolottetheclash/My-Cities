{
  "name": "my-cities",
  "version": "1.0.0",
  "description": "My cities is an app which helps users who want to discover new cities",
  "main": "server.js",
  "scripts": {
    "start": "npm run dev",
    "client": "cd ../frontend && npm start",
    "build": "tsc",
    "lint": "eslint . ",
    "fix:lint": "eslint . --fix",
    "dev": "ts-node-dev --transpile-only --respawn  ./src/server.ts",
    "full-dev": "concurrently \"npm run dev \" \"npm run client\" ",
    "prod": "tsc && node ./built/src/server.js",
    "debug": "tsc && node --inspect ./built/src/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lolottetheclash/My-Cities.git"
  },
  "author": "Lauren OLIVIER",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lolottetheclash/My-Cities/issues"
  },
  "homepage": "https://github.com/lolottetheclash/My-Cities#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "colors": "^1.4.0",
    "concurrently": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.15",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.7.37",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^6.13.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  }
}
